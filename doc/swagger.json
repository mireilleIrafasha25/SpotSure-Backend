    "/product/addProduct": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Add a new product",
        "description": "add a new product with  the provided details",
        "parameters": [
          {
            "name": "category",
            "in": "formData",
            "required": true,
            "type":"string"
            
          },
          {
            "name": "name",
            "in": "formData",
            "required": true,
            "type":"string"
            
          },
          {
            "name": "image",
            "in": "formData",
            "required": true,
            "type":"file"
           
          },
          {
            "name": "description",
            "in": "formData",
            "required": true,
            "type":"string"
           
          },
          {
            "name": "rating",
            "in": "formData",
            "required": true,
            "type":"number"
           
          },
          {
            "name": "colors",
            "in": "formData",
            "required": true,
            "type":"string"
           
          },
          {
            "name": "Min_price",
            "in": "formData",
            "required": true,
            "type":"number"
           
          },
          {
            "name":"Max_price",
            "in": "formData",
            "required": true,
            "type":"number"
          }
          
        ],
       
        "responses": {
          "200": {
            "description": "Service added successfully"
           
          },
          "401": {
            "description": "Bad request -Validation error"
            
          }
        }
      }
    },   
